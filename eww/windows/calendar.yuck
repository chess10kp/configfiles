(defwidget calendar-win []
  (box
    :class "calendar-win"
    :style "font-family: TerminessTTF Nerd Font;"
    (calendar)))

(defwindow calendar
  :monitor 0
  :geometry (geometry
    :x "0%"
    :y "0%"
  	:anchor "bottom center"
    :width "0px"
    :style "font-family: TerminessTTF Nerd Font;"
    :height "0px")
  (calendar-win))
