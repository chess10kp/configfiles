    "requests: GET": {
        "prefix": "reqget",
        "body": [
            "try:",
            "\tresponse = requests.get('${1:url}')",
            "\tresponse.raise_for_status()  # Raise HTTPError for bad responses (4xx or 5xx)",
            "\t$data = response.json()",
            "except requests.exceptions.RequestException as e:",
            "\tpass"
        ],
        "description": "requests: GET"
    },
    "requests: POST": {
        "prefix": "reqpost",
        "body": [
            "payload = {",
            "\t'${1:key1}': '${2:value1}',",
            "\t'${3:key2}': '${4:value2}'",
            "}",
            "",
            "try:",
            "\tresponse = requests.post('${5:url}', json=payload)",
            "\tresponse.raise_for_status()",
            "except requests.exceptions.RequestException as e:",
